            .card
                h1 Free
                p Includes
                ul
                    li
                        span(class="fa fa-users")
                        |  2 teams
                    li
                        span(class="fa fa-list")
                        |  3 projects
                .button_holder
                    a(href="#")
                        button Current Plan
            .card
                h1 Business
                p Includes
                ul
                    li
                        span(class="fa fa-users")
                        |  10 teams
                    li
                        span(class="fa fa-list")
                        |  10 projects
                .button_holder
                    a(href="#")
                        button Upgrade
            .card
                h1 Premium
                p Includes
                ul
                    li
                        span(class="fa fa-users")
                        |  Unlimited teams
                    li
                        span(class="fa fa-list")
                        |  Unlimited projects
                .button_holder
                    a(href="#")
                        button Upgrade
