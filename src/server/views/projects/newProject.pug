doctype html
head
    include ../includes/head
    +head
    title="New Project"
    link(rel="stylesheet", href="public/stylesheets/projects/newproject.css")
body
    include ../includes/navbar
    +navbar-include(user)
    .title
        h1 CREATE A PROJECT
    .video
        video(id="video-style" width="320" height="240" controls)
            source(src="movie.mp4" type="video/mp4")
            source(src="movie.ogg" type="video/ogg")
            | Your browser does not support the video tag.
    .new_project
        if user === null
            h1(style="text-align: center;") You are not logged in! Please login to make a project!
        else
            form(action="javascript:createProject()")
                h1 CREATE A NEW PROJECT BELOW
                label(for="project_name") Project name:
                input(type="text" id="project_name" placeholder="Project name..")
                label(for="teams") Team:
                select(id="team")
                    option(value="") No team
                    each val in teams
                        option(value=`${val._id}`)=val.name
                input(type="submit" value="Create Project")
    svg(class="header-frame" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" viewBox="0 0 1920 310")
        defs
            style.
                .cls-1 {
                    display: block;
                    fill: #5f4def;
                }
        path(class="cls-1", d="M0,283.054c22.75,12.98,53.1,15.2,70.635,14.808,92.115-2.077,238.3-79.9,354.895-79.938,59.97-.019,106.17,18.059,141.58,34,47.778,21.511,47.778,21.511,90,38.938,28.418,11.731,85.344,26.169,152.992,17.971,68.127-8.255,115.933-34.963,166.492-67.393,37.467-24.032,148.6-112.008,171.753-127.963,27.951-19.26,87.771-81.155,180.71-89.341,72.016-6.343,105.479,12.388,157.434,35.467,69.73,30.976,168.93,92.28,256.514,89.405,100.992-3.315,140.276-41.7,177-64.9V0.24H0V283.054Z")
    include ../includes/footer
    +footer()
script.
    async function createProject() {
        const team = document.getElementById('team').value;
        const name = document.getElementById('project_name').value;
        const f = await fetch('/api/newproject', {method: "GET", headers: {team, name}});

        const j = await f.json();
        if (j.id !== undefined) {
            location.replace('/project/' + j.id);
        }
    }