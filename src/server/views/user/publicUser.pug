doctype html
head
    include ../includes/head
    +head
    title= `Public user ${user.display_name}`
    link(rel="stylesheet", href="/public/stylesheets/user/publicProfile.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
body
    include ../includes/navbar
    +navbar-include(user)

    .container
        .title
            h1(style="text-align: center;")=`${user.display_name}'s Public Profile`
        .information
            h2 Display Name:
                =' '
                a(href=`/user/${user.username}`)=`${user.display_name}`
            h2
                span(class="fa fa-users")
                |  Teams
            ul
                if teams.length === 0
                    li No teams
                else
                    each val in teams
                        li=val.name
            h2
                span(class="fa fa-list")
                |  Projects:
            ul
                if projects.length === 0
                    li No projects
                else
                        ach val in projects
                        li=val.name
    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1040 220")
        path(fill="#5F4DEE" fill-opacity="1" d="M0,160L48,170.7C96,181,192,203,288,192C384,181,480,139,576,128C672,117,768,139,864,138.7C960,139,1056,117,1152,96C1248,75,1344,53,1392,42.7L1440,32L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z")
    include ../includes/footer
    +footer()
